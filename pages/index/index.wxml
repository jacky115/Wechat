<view class="main">
    <!-- 公共头部 -->
    <MyTitle></MyTitle>
    <!-- 首页导航 -->
    <view class="nav_wrap">
        <!-- 滚动区域的组件 -->
        <scroll-view class="nav" scroll-x="false">
            <view bindtap="activeNav" data-index="{{index}}" class="nav_item  {{currentIndex==index?'active':' '}}" wx:for="{{navList}}" wx:key="{{index}}">
                {{item.text}}
            </view>
        </scroll-view>
    </view>
    <!-- 轮播图 -->
    <view class="slides">
        <swiper class="" autoplay="false" indicator-dots="{{true}}" circular="{{true}}" indicator-active-color="red" indicator-color="white">
            <swiper-item class=""
             wx:for="{{swiperList}}" ws:key="{{index}}">
                <navigator>
                    <image class="" src="{{item.imgSrc}}" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="" />
                </navigator>
            </swiper-item>
              
        </swiper>
          
    </view>
    <!-- 视频列表 -->
      <view class="video">
              <navigator class="video_item" target="" url="" wx:for="{{videoList}}" wx:key="{{index}}">
              <!-- 图片容器 -->
              <view class="video_img">
                  <!-- 图片 -->
                  <image class="" src="{{item.imgSrc}}" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="" />
                    <!-- 播放量... -->
                    <view class="video_info">
                        <!-- 播放量 -->
                        <view class="play_count">
                            <!-- 图标 -->
                            <text class="video_icon icon-bofangliang"></text>
                              <!-- 数值 -->
                              <text class="play_count_num">
                                  {{item.playCount}}
                              </text>
                                
                        </view>
                    <!-- 评论量 -->
                        <view class="comment_count">
                            <!-- 图标 -->
                            <text class="icon-pinglun">
                                
                            </text>
                              
                            <!-- 数值 -->
                            <text class="comment_count_num">
                                  {{item.commentCount}}
                              </text>
                        </view>
                    </view>    
              </view>
              <!-- 标题 -->
              <view class="video_title">{{item.desc}}</view>   
          </navigator>
      </view>
</view>
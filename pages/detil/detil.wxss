.main{
    padding:"10rpx";
    color: #666;
}
/* 视频 */
.video_info{
    margin-top: 10rpx;
}
.video_info video{
    width: 100%;
}
.vied_title{
    display: flex;
    justify-content: space-between;
    font-size: 35rpx;
}
.iconfont{
  font-size: 13rpx;
}
.video_detail{
    margin-top: 5rpx;
    font-size: 28rpx;
}
.video_detail .author{
    color: #000;
}
.video_detail text{
    margin-left: 15rpx;
}
/* 推荐视频 */
.other_list{
    margin-top: 10rpx;
}
.item_other{
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}
.other_img_wrap{
    width: 30%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.other_img_wrap image{
    width: 90%;
    border-radius: 15rpx;
}
.other_info{
    width: 60%;
}
.other_title{
    font-size: 28rpx;
    color: #e06f93;
}
.other_detail{
    font-size: 26rpx;
    color: #666;
}






